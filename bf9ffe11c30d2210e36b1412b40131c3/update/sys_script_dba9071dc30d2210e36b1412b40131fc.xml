        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
// Instantiate the ITAMUtils class.  Call the isDatePast method and pass
	// the u_when_needed value.
	var niutils = new ITAMUtils();
	var isPast = niutils.isDatePast(current.when_needed);
	
	// If the isDatePast method returns true, the date is in the past.
	if(isPast == true){
		gs.addErrorMessage("When needed date cannot be in the past.  Your request has not been saved to the database.");
		current.setAbortAction(true);
	}
	
	
	// pass the When needed field value to the isDateToday method in ITAMUtils
	var isToday = niutils.isDateToday(current.when_needed);
	
	// if the isDateToday method returns true the When needed date is today 
	if(isToday == true){
		gs.addErrorMessage("You cannot submit ITAM requests for today.");
		current.setAbortAction(true);
	}

})(current, previous);]]></script>
